{% extends 'baseBack.html.twig' %}

{% block title %}Modifier un utilisateur{% endblock %}

{% block body %}
<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb bg-light p-3 rounded shadow-sm">
            <li class="breadcrumb-item"><a href="{{ path('app_back_user_index') }}">Utilisateurs</a></li>
            <li class="breadcrumb-item active" aria-current="page">Modifier un utilisateur</li>
        </ol>
    </nav>

    <div class="card shadow-sm mt-4">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="fas fa-user-edit"></i> Modifier un utilisateur</h4>
        </div>

        <div class="card-body">
            {% for message in app.flashes('error') %}
                <div class="alert alert-danger">
                    {{ message }}
                </div>
            {% endfor %}

            {{ form_start(form) }}
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            {{ form_label(form.nom_user, 'Nom', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                            {{ form_widget(form.nom_user, {'attr': {'class': 'form-control shadow-sm'}}) }}
                            {{ form_errors(form.nom_user) }}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            {{ form_label(form.prenom_user, 'Prénom', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                            {{ form_widget(form.prenom_user, {'attr': {'class': 'form-control shadow-sm'}}) }}
                            {{ form_errors(form.prenom_user) }}
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            {{ form_label(form.email_user, 'Email', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                            {{ form_widget(form.email_user, {'attr': {'class': 'form-control shadow-sm'}}) }}
                            {{ form_errors(form.email_user) }}
                        </div>
                    </div>
                    <div class="col-md-6">
                        {% if form.pw_user is defined %}
                            <div class="mb-3">
                                {{ form_label(form.pw_user, 'Mot de passe', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                                {{ form_widget(form.pw_user, {'attr': {'class': 'form-control shadow-sm'}}) }}
                                {{ form_errors(form.pw_user) }}
                            </div>
                        {% endif %}
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            {{ form_label(form.roles, 'Rôles', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                            {{ form_widget(form.roles, {'attr': {'class': 'form-check-input'}}) }}
                            {{ form_errors(form.roles) }}
                        </div>
                    </div>
                </div>

                <div class="d-flex flex-column align-items-end mt-4">
                    <a href="{{ path('app_back_user_index') }}" class="btn btn-secondary shadow-sm mb-2">
                        <i class="fas fa-arrow-left"></i> Retour
                    </a>
                    <button type="submit" class="btn btn-success shadow-sm">
                        <i class="fas fa-save"></i> Enregistrer
                    </button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
