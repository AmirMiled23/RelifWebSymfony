{% extends 'baseBack.html.twig' %}

{% block title %}User Details{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">User Details</h1>

    <table class="table table-bordered">
        <tbody>
            <tr>
                <th>Id_user</th>
                <td>{{ user.idUser }}</td>
            </tr>
            <tr>
                <th>Nom_user</th>
                <td>{{ user.nomUser }}</td>
            </tr>
            <tr>
                <th>Prenom_user</th>
                <td>{{ user.prenomUser }}</td>
            </tr>
            <tr>
                <th>Email_user</th>
                <td>{{ user.emailUser }}</td>
            </tr>
            <tr>
                <th>Num_user</th>
                <td>{{ user.numUser }}</td>
            </tr>
            <tr>
                <th>Adresse_user</th>
                <td>{{ user.adresseUser }}</td>
            </tr>
            <tr>
                <th>Age_user</th>
                <td>{{ user.ageUser }}</td>
            </tr>
            <tr>
                <th>Point_user</th>
                <td>{{ user.pointUser }}</td>
            </tr>
            <tr>
                <th>Pw_user</th>
                <td>{{ user.pwUser }}</td>
            </tr>
            <tr>
                <th>Date_inscri</th>
                <td>{{ user.dateInscri ? user.dateInscri|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Reset_code</th>
                <td>{{ user.resetCode }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-secondary" href="{{ path('app_back_user_index') }}">Back to list</a>
    <a class="btn btn-warning" href="{{ path('app_back_user_edit', {'id_user': user.id_user}) }}">Edit</a>

    {{ include('back_user/_delete_form.html.twig') }}
</div>
{% endblock %}
