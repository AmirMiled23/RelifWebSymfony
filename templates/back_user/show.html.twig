{% extends 'backoff.html.twig' %}

{% block title %}User Details{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">User Details</h1>

    <table class="table table-bordered">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.idUser }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.nomUser }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ user.prenomUser }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.emailUser }}</td>
            </tr>
            <tr>
                <th>Numéro</th>
                <td>{{ user.numUser }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ user.adresseUser }}</td>
            </tr>
            <tr>
                <th>Âge</th>
                <td>{{ user.ageUser }}</td>
            </tr>
            <tr>
                <th>Points</th>
                <td>{{ user.pointUser }}</td>
            </tr>
            <tr>
                <th>Mot de passe</th>
                <td>{{ user.pwUser }}</td>
            </tr>
            <tr>
                <th>Date d'inscription</th>
                <td>{{ user.dateInscri ? user.dateInscri|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Code de réinitialisation</th>
                <td>{{ user.resetCode }}</td>
            </tr>
        </tbody>
    </table>

    {% if user.isBanned() %}
        <form method="post" action="{{ path('app_back_user_unban', {'id': user.idUser}) }}">
            <button class="btn btn-success">Débannir</button>
        </form>
        <p>Banni jusqu'au : {{ user.bannedUntil|date('Y-m-d H:i') }}</p>
    {% else %}
        <form method="post" action="{{ path('app_back_user_ban', {'id': user.idUser}) }}">
            <label for="ban_type">Type de bannissement :</label>
            <select name="ban_type" id="ban_type" class="form-select">
                <option value="permanent">Permanent</option>
                <option value="temporary">Temporaire</option>
            </select>

            <div id="ban_duration_field" style="display: none;">
                <label for="ban_duration">Durée (en jours) :</label>
                <input type="number" name="ban_duration" id="ban_duration" class="form-control">
            </div>

            <button class="btn btn-danger mt-2">Bannir</button>
        </form>
    {% endif %}

    <script>
        document.getElementById('ban_type').addEventListener('change', function () {
            const durationField = document.getElementById('ban_duration_field');
            if (this.value === 'temporary') {
                durationField.style.display = 'block';
            } else {
                durationField.style.display = 'none';
            }
        });
    </script>

    <a class="btn btn-secondary" href="{{ path('app_back_user_index') }}">Back to list</a>
    <a class="btn btn-warning" href="{{ path('app_back_user_edit', {'id': user.idUser}) }}">Edit</a>

    {{ include('back_user/_delete_form.html.twig') }}
</div>
{% endblock %}
