{% extends 'baseBack.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">User index</h1>

    <table class="table table-bordered table-striped">
        <thead class="thead-dark">
            <tr>
                <th>Id_user</th>
                <th>Nom_user</th>
                <th>Prenom_user</th>
                <th>Email_user</th>
                <th>Num_user</th>
                <th>Adresse_user</th>
                <th>Age_user</th>
                <th>Point_user</th>
                <th>Pw_user</th>
                <th>Date_inscri</th>
                <th>Reset_code</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.idUser }}</td>
                <td>{{ user.nomUser }}</td>
                <td>{{ user.prenomUser }}</td>
                <td>{{ user.emailUser }}</td>
                <td>{{ user.numUser }}</td>
                <td>{{ user.adresseUser }}</td>
                <td>{{ user.ageUser }}</td>
                <td>{{ user.pointUser }}</td>
                <td>{{ user.pwUser }}</td>
                <td>{{ user.dateInscri ? user.dateInscri|date('Y-m-d') : '' }}</td>
                <td>{{ user.resetCode }}</td>
                <td>
                    <a class="btn btn-primary btn-sm" href="{{ path('app_back_user_show', {'id_user': user.id_user}) }}">Show</a>
                    <a class="btn btn-warning btn-sm" href="{{ path('app_back_user_edit', {'id_user': user.id_user}) }}">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">No records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('app_back_user_new') }}">Create new</a>
</div>
{% endblock %}
