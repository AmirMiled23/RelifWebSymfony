{% extends 'Baseback.html.twig' %}

{% block title %}Nouveau matériel{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h2>Ajouter un nouveau matériel</h2>
            </div>

            <div class="card-body">
                {% for message in app.flashes('error') %}
                    <div class="alert alert-danger">
                        {{ message }}
                    </div>
                {% endfor %}

                {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

                    <div class="mb-3">
                        {{ form_label(form.nom_materiel) }}
                        {{ form_widget(form.nom_materiel, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.nom_materiel) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.description) }}
                        {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.description) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.quantite_dispo) }}
                        {{ form_widget(form.quantite_dispo, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.quantite_dispo) }}
                    </div>

                   

                    <div class="d-flex justify-content-between mt-4">
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-save"></i> Enregistrer
                        </button>
                        <a href="{{ path('app_backmateriel_index') }}" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Retour
                        </a>
                    </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
