{% extends 'Baseback.html.twig' %}

{% block title %}Modifier Matériel{% endblock %}

{% block body %}
    <div class="container mt-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Matériels</a></li>
                <li class="breadcrumb-item active" aria-current="page">Modifier</li>
            </ol>
        </nav>

        <div class="card">
            <div class="card-header">
                <h4>Formulaire de modification</h4>
            </div>
            <div class="card-body">
                {{ form_start(form) }}

                    <div class="mb-3">
                        {{ form_label(form.nom_materiel) }}
                        {{ form_widget(form.nom_materiel, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.description) }}
                        {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.quantite_dispo) }}
                        {{ form_widget(form.quantite_dispo, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-save"></i> Modifier
                        </button>
                        <a href="{{ path('app_backmateriel_index') }}" class="btn btn-primary">
                            <i class="fas fa-arrow-left"></i> Retour
                        </a>
                    </div>

                {{ form_end(form) }}
            </div>
        </div>

        <div class="mt-3">
            {{ include('backmateriel/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
