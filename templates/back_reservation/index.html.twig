{% extends 'Baseback.html.twig' %}

{% block title %}Liste des réservations{% endblock %}

{% block body %}
    <h1 class="mb-4">Liste des réservations</h1>

    <form method="get" action="{{ path('app_back_reservation_search') }}" class="mb-4">
        <div class="row">
            <div class="col">
                <input type="text" name="nomMateriel" class="form-control" placeholder="Nom du matériel" value="{{ app.request.query.get('nomMateriel') }}">
            </div>
            <div class="col">
                <input type="date" name="dateDebut" class="form-control" placeholder="Date début" value="{{ app.request.query.get('dateDebut') }}">
            </div>
            <div class="col">
                <input type="date" name="dateFin" class="form-control" placeholder="Date fin" value="{{ app.request.query.get('dateFin') }}">
            </div>
            <div class="col">
                <input type="number" name="quantiteMin" class="form-control" placeholder="Quantité min" value="{{ app.request.query.get('quantiteMin') }}">
            </div>
            <div class="col">
                <input type="number" name="quantiteMax" class="form-control" placeholder="Quantité max" value="{{ app.request.query.get('quantiteMax') }}">
            </div>
            <div class="col">
                <select name="sort" class="form-control">
                    <option value="asc" {% if app.request.query.get('sort') == 'asc' %}selected{% endif %}>Date croissante</option>
                    <option value="desc" {% if app.request.query.get('sort') == 'desc' %}selected{% endif %}>Date décroissante</option>
                </select>
            </div>
            <div class="col">
                <button type="submit" class="btn btn-primary">Rechercher</button>
            </div>
        </div>
    </form>

    <table class="table">
        <thead>
            <tr>
                <th>Nom du matériel</th>
                <th>Date début</th>
                <th>Date fin</th>
                <th>Quantité réservée</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reservation in reservation_materiels %}
            <tr>
                <td>{{ reservation.materiel ? reservation.materiel.nomMateriel : 'Non spécifié' }}</td>
                <td>{{ reservation.dateDebut ? reservation.dateDebut|date('Y-m-d') : '' }}</td>
                <td>{{ reservation.dateFin ? reservation.dateFin|date('Y-m-d') : '' }}</td>
                <td>{{ reservation.quantiteReservee }}</td>
                <td>
                    <a href="{{ path('app_back_reservation_show', {'id_reservation': reservation.idReservation}) }}">show</a>
                    <a href="{{ path('app_back_reservation_edit', {'id_reservation': reservation.idReservation}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucune réservation trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
