{% extends 'Baseback.html.twig' %}

{% block title %}Nouvelle réservation{% endblock %}

{% block body %}
    <div class="container mt-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('app_back_reservation_index') }}">Réservations</a></li>
                <li class="breadcrumb-item active" aria-current="page">Nouvelle réservation</li>
            </ol>
        </nav>

        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h4><i class="fas fa-calendar-plus"></i> Ajouter une nouvelle réservation</h4>
            </div>

            <div class="card-body">
                {% for message in app.flashes('error') %}
                    <div class="alert alert-danger">
                        {{ message }}
                    </div>
                {% endfor %}

                {{ form_start(form) }}
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_label(form.date_debut, 'Date début', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.date_debut, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.date_debut) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_label(form.date_fin, 'Date fin', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.date_fin, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.date_fin) }}
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_label(form.materiel, 'Matériel', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.materiel, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.materiel) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_label(form.quantite_reservee, 'Quantité réservée', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.quantite_reservee, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.quantite_reservee) }}
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-save"></i> Créer
                        </button>
                        <a href="{{ path('app_back_reservation_index') }}" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Retour
                        </a>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}