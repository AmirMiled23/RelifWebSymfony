{% extends 'backoff.html.twig' %}

{% block title %}Resource index{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
{% endblock %}

{% block body %}
<style>
    .main-panel {
        margin-top: 70px; /* Add space below the navbar */
    }
    .resource-table-back thead th {
        background: linear-gradient(90deg, #e8f5e9 0%, #c8e6c9 100%);
        color: #2e7d32;
    }
    .resource-table-back tbody tr:nth-child(odd) {
        background: #f8f9fa;
    }
    .resource-table-back tbody tr:nth-child(even) {
        background: #e0f2f1;
    }
    .resource-table-back td.pistach {
        background: #b2dfdb;
        color: #33691e;
        font-weight: 600;
    }
    .resource-table-back td.gray {
        background: #ececec;
        color: #424242;
    }
    .resource-table-back td.white {
        background: #fff;
    }
</style>
    <h1>Resource index</h1>

    <table class="table resource-table-back">
        <thead>
            <tr>
                <th>Id</th>
                <th class="pistach">Type</th>
                <th class="gray">Url</th>
                <th class="white">Description</th>
                <th>actions</th>
                <th>PDF Export</th>
            </tr>
        </thead>
        <tbody>
        {% for resource in resources %}
            <tr>
                <td>{{ resource.id }}</td>
                <td class="pistach">{{ resource.type }}</td>
                <td class="gray">{{ resource.url }}</td>
                <td class="white">{{ resource.description }}</td>
                <td>
                    <a href="{{ path('app_resource_back_show', {'id': resource.id}) }}" class="btn btn-info btn-sm">show</a>
                    <a href="{{ path('app_resource_back_edit', {'id': resource.id}) }}" class="btn btn-warning btn-sm">edit</a>
                </td>
                <td>
                    <a href="{{ path('resource_export', {'id': resource.id}) }}" class="btn btn-secondary btn-sm">Export PDF</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_resource_back_new') }}" class="btn btn-success mt-3">Create new</a>
{% endblock %}
