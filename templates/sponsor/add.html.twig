{% extends 'base.html.twig' %}

{% block title %}Ajouter un Sponsor{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h2 class="h4 mb-0">
                        <i class="fas fa-plus-circle me-2"></i>
                        Ajouter un Sponsor
                    </h2>
                </div>

                <div class="card-body">
                    {# Messages Flash #}
                    {% for label, messages in app.flashes %}
                        {% for message in messages %}
                            <div class="alert alert-{{ label }} alert-dismissible fade show">
                                {{ message }}
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        {% endfor %}
                    {% endfor %}

                    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate', 'enctype': 'multipart/form-data'}}) }}
                    
                    <div class="row g-3">
                        {# Champ Nom #}
                        <div class="col-md-6">
                            {{ form_label(form.nom, 'Nom du Sponsor', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                            {{ form_widget(form.nom, {
                                'attr': {
                                    'class': 'form-control ' ~ (form.nom.vars.errors|length ? 'is-invalid' : ''),
                                    'placeholder': 'Nom complet du sponsor'
                                }
                            }) }}
                            <div class="invalid-feedback">
                                {{ form_errors(form.nom) }}
                            </div>
                        </div>

                        {# Champ Email #}
                        <div class="col-md-6">
                            {{ form_label(form.email, 'Email', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                            {{ form_widget(form.email, {
                                'attr': {
                                    'class': 'form-control ' ~ (form.email.vars.errors|length ? 'is-invalid' : ''),
                                    'placeholder': 'exemple@esprit.tn'
                                }
                            }) }}
                            <small class="form-text text-muted">Doit être @esprit.tn ou @gmail.com</small>
                            <div class="invalid-feedback">
                                {{ form_errors(form.email) }}
                            </div>
                        </div>

                        {# Champ Téléphone #}
                        <div class="col-md-6">
                            {{ form_label(form.telephone, 'Téléphone', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                            {{ form_widget(form.telephone, {
                                'attr': {
                                    'class': 'form-control ' ~ (form.telephone.vars.errors|length ? 'is-invalid' : ''),
                                    'placeholder': '12345678',
                                    'pattern': '[0-9]{8}'
                                }
                            }) }}
                            <small class="form-text text-muted">8 chiffres requis</small>
                            <div class="invalid-feedback">
                                {{ form_errors(form.telephone) }}
                            </div>
                        </div>

                        {# Champ Secteur #}
                        <div class="col-md-6">
                            {{ form_label(form.secteur, 'Secteur d\'activité', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                            {{ form_widget(form.secteur, {
                                'attr': {
                                    'class': 'form-select ' ~ (form.secteur.vars.errors|length ? 'is-invalid' : '')
                                }
                            }) }}
                            <div class="invalid-feedback">
                                {{ form_errors(form.secteur) }}
                            </div>
                        </div>

                        {# Champ Adresse #}
                        <div class="col-12">
                            {{ form_label(form.adresse, 'Adresse', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                            {{ form_widget(form.adresse, {
                                'attr': {
                                    'class': 'form-control ' ~ (form.adresse.vars.errors|length ? 'is-invalid' : ''),
                                    'placeholder': 'Adresse complète'
                                }
                            }) }}
                            <div class="invalid-feedback">
                                {{ form_errors(form.adresse) }}
                            </div>
                        </div>

                        {# Champ Photo - Version corrigée #}
                        <div class="col-12">
                            {{ form_label(form.photo, 'Logo du sponsor', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                            {{ form_widget(form.photo, {
                                'attr': {
                                    'class': 'form-control ' ~ (form.photo.vars.errors|length ? 'is-invalid' : ''),
                                    'accept': 'image/jpeg,image/png'
                                }
                            }) }}
                            <small class="form-text text-muted">Formats acceptés : JPG, PNG (max 2MB)</small>
                            <div class="invalid-feedback">
                                {{ form_errors(form.photo) }}
                            </div>
                            {% if form.vars.value.photo %}
                                <div class="mt-2">
                                    <span class="d-block mb-1">Logo actuel :</span>
                                    <img src="{{ asset('uploads/photos/' ~ form.vars.value.photo) }}" 
                                         alt="Logo actuel" 
                                         class="img-thumbnail" 
                                         style="max-height: 100px">
                                </div>
                            {% endif %}
                        </div>

                        {# Boutons #}
                        <div class="col-12 mt-4">
                            <div class="d-flex justify-content-between">
                                <a href="{{ path('sponsor_list') }}" class="btn btn-outline-secondary">
                                    <i class="fas fa-arrow-left me-2"></i> Annuler
                                </a>
                                <button type="submit" class="btn btn-primary px-4">
                                    <i class="fas fa-save me-2"></i> Enregistrer
                                </button>
                            </div>
                        </div>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .is-invalid {
        border-color: #dc3545;
        background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 12 12' width='12' height='12' fill='none' stroke='%23dc3545'%3e%3ccircle cx='6' cy='6' r='4.5'/%3e%3cpath stroke-linejoin='round' d='M5.8 3.6h.4L6 6.5z'/%3e%3ccircle cx='6' cy='8.2' r='.6' fill='%23dc3545' stroke='none'/%3e%3c/svg%3e");
        background-repeat: no-repeat;
        background-position: right calc(0.375em + 0.1875rem) center;
        background-size: calc(0.75em + 0.375rem) calc(0.75em + 0.375rem);
    }
    .invalid-feedback {
        display: block;
        color: #dc3545;
    }
    .card {
        border-radius: 0.5rem;
    }
    .img-thumbnail {
        max-width: 200px;
        height: auto;
    }
</style>
{% endblock %}