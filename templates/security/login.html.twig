{% extends 'login.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h1 class="h3 mb-3 font-weight-normal">Connexion</h1>
                </div>
                <div class="card-body">
                    {% if error %}
                        <div class="alert alert-danger">
                            {% if error.messageKey == 'Votre compte est banni.' %}
                                <i class="fa fa-ban"></i> Votre compte est suspendu. Contactez l'administration.
                            {% else %}
                                {{ error.messageKey|trans(error.messageData, 'security') }}
                            {% endif %}
                        </div>
                    {% endif %}

                    <form method="post">
                        <div class="form-group">
                            <label for="inputEmail">Email</label>
                            <input type="email" value="{{ last_username }}" name="email_user" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                        </div>
                        <div class="form-group">
                            <label for="inputPassword">Mot de passe</label>
                            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                        </div>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        <button class="btn btn-lg btn-primary mt-3" type="submit">
                            Se connecter
                        </button>
                    </form>

                    <hr>

                    <div class="text-center mt-3">
                        <p>Vous n'avez pas de compte ?</p>
                        <a href="{{ path('app_user_new') }}" class="btn btn-secondary">
                            <i class="fas fa-user-plus"></i> Créer un compte
                        </a>
                    </div>
                    <p class="mt-3">
                        <a href="{{ path('forgot_password') }}">Mot de passe oublié ?</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}