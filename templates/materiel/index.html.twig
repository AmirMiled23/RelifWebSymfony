{% extends 'base.html.twig' %}

{% block title %}Materiel index{% endblock %}

{% block body %}
    <h1 class="mb-4 text-center">Liste des matériels</h1>

    <a class="btn btn-secondary mb-3" href="{{ path('app_reservation_materiel_index') }}">Liste des réservations</a>

    <form method="get" action="{{ path('app_materiel_search') }}" class="mb-4">
        <div class="row">
            <div class="col">
                <input type="text" name="nom" class="form-control" placeholder="Nom du matériel" value="{{ app.request.query.get('nom') }}">
            </div>
            <div class="col">
                <input type="text" name="description" class="form-control" placeholder="Description" value="{{ app.request.query.get('description') }}">
            </div>
            <div class="col">
                <input type="number" name="quantiteMin" class="form-control" placeholder="Quantité min" value="{{ app.request.query.get('quantiteMin') }}">
            </div>
            <div class="col">
                <input type="number" name="quantiteMax" class="form-control" placeholder="Quantité max" value="{{ app.request.query.get('quantiteMax') }}">
            </div>
            <div class="col">
                <select name="sort" class="form-control">
                    <option value="asc" {% if app.request.query.get('sort') == 'asc' %}selected{% endif %}>Quantité croissante</option>
                    <option value="desc" {% if app.request.query.get('sort') == 'desc' %}selected{% endif %}>Quantité décroissante</option>
                </select>
            </div>
            <div class="col">
                <button type="submit" class="btn btn-primary">Rechercher</button>
            </div>
        </div>
    </form>

    <div class="row">
        {% for materiel in materiels %}
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h5 class="card-title mb-0">{{ materiel.nomMateriel }}</h5>
                    </div>
                    <div class="card-body">
                        <p class="card-text">{{ materiel.description }}</p>
                        <span class="badge bg-info text-dark">Quantité: {{ materiel.quantiteDispo }}</span>
                    </div>
                    <div class="card-footer d-flex justify-content-between">
                        <a href="{{ path('app_materiel_show', {'id_materiel': materiel.idMateriel}) }}" class="btn btn-sm btn-outline-primary">Voir</a>
                        <a href="{{ path('app_materiel_edit', {'id_materiel': materiel.idMateriel}) }}" class="btn btn-sm btn-outline-secondary">Modifier</a>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <div class="alert alert-warning text-center" role="alert">
                    Aucun matériel trouvé.
                </div>
            </div>
        {% endfor %}
    </div>

    <div class="d-flex justify-content-between mt-4">
        <a href="{{ path('app_materiel_new') }}" class="btn btn-success">Créer un nouveau matériel</a>
        <a class="btn btn-success" href="{{ path('app_materiel_pdf') }}" target="_blank">Télécharger en PDF</a>
    </div>
{% endblock %}