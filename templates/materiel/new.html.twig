{% extends 'base.html.twig' %}

{% block title %}Ajouter un matériel{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .card {
            border: none;
            border-radius: 10px;
            overflow: hidden;
            margin-bottom: 2rem;
        }
        
        .card-header {
            padding: 1.25rem 1.5rem;
            border-bottom: none;
            background: linear-gradient(135deg, #0069d9 0%, #004a9f 100%);
        }
        
        .card-body {
            padding: 2rem;
            background-color: #4a6baf;
        }
        
        .form-group {
            margin-bottom: 1.5rem;
        }
        
        .form-control {
            border-radius: 5px;
            padding: 12px 15px;
            border: 1px solid #4a6baf;
            transition: all 0.3s ease;
        }
        
        .form-control:focus {
            border-color: #80bdff;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
            transform: translateY(-1px);
        }
        
        .form-label {
            font-weight: 600;
            margin-bottom: 0.5rem;
            color: #495057;
        }
        
        .btn {
            padding: 10px 25px;
            border-radius: 5px;
            font-weight: 500;
            letter-spacing: 0.5px;
            transition: all 0.3s ease;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }
        
        .btn-success {
            background-color: #28a745;
            border-color: #28a745;
        }
        
        .btn-success:hover {
            background-color: #218838;
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.15);
        }
        
        .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
        }
        
        .btn-secondary:hover {
            background-color: #5a6268;
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.15);
        }
        
        .shadow-lg {
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1) !important;
        }
        
        .text-center {
            color: #2c3e50;
            font-weight: 600;
            margin-bottom: 2rem;
        }
        
        .invalid-feedback {
            color: #dc3545;
            font-size: 0.875em;
            margin-top: 0.25rem;
        }
        
        .breadcrumb {
            background-color: #4a6baf;
            border-radius: 5px;
            padding: 0.75rem 1rem;
        }
        
        .breadcrumb-item a {
            color: #4a6baf;
            text-decoration: none;
            font-weight: 500;
        }
        
        textarea.form-control {
            min-height: 120px;
            resize: vertical;
        }
    </style>
{% endblock %}

{% block body %}
<div class="container mt-4">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('app_materiel_index') }}">Liste des matériels</a></li>
            <li class="breadcrumb-item active" aria-current="page">Nouveau matériel</li>
        </ol>
    </nav>

    <div class="card shadow-lg">
        <div class="card-header text-white">
            <h4 class="mb-0"><i class="fas fa-plus-circle me-2"></i> Ajouter un nouveau matériel</h4>
        </div>
        <div class="card-body">
            {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
            
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        {{ form_label(form.nom_materiel, 'Nom du matériel', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.nom_materiel, {'attr': {'class': 'form-control'}}) }}
                        <div class="invalid-feedback">
                            {{ form_errors(form.nom_materiel) }}
                        </div>
                    </div>
                </div>
                
                <div class="col-md-6">
                    <div class="form-group">
                        {{ form_label(form.quantite_dispo, 'Quantité disponible', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.quantite_dispo, {'attr': {'class': 'form-control'}}) }}
                        <div class="invalid-feedback">
                            {{ form_errors(form.quantite_dispo) }}
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="form-group">
                {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 4}}) }}
                <div class="invalid-feedback">
                    {{ form_errors(form.description) }}
                </div>
            </div>
            
            <div class="d-flex justify-content-between mt-4">
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-save me-2"></i> Enregistrer
                </button>
                <a href="{{ path('app_materiel_index') }}" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-2"></i> Retour à la liste
                </a>
            </div>
            
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}