<script>
(function() {
    // Snake background effect
    document.body.classList.add('snake-bg');
    let trail = [];
    const maxTrail = 25;
    function createDot(x, y) {
        const dot = document.createElement('div');
        dot.className = 'snake-trail';
        dot.style.left = x + 'px';
        dot.style.top = y + 'px';
        document.body.appendChild(dot);
        trail.push(dot);
        if (trail.length > maxTrail) {
            const old = trail.shift();
            old.remove();
        }
    }
    document.addEventListener('mousemove', function(e) {
        createDot(e.clientX, e.clientY);
    });
    // Animate trail color
    setInterval(() => {
        trail.forEach((dot, i) => {
            dot.style.background = `linear-gradient(135deg, hsl(${(i*15)%360}, 70%, 60%), hsl(${(i*15+60)%360}, 70%, 60%))`;
            dot.style.opacity = (0.7 * (i+1)/trail.length).toFixed(2);
        });
    }, 30);

    // Draggable card functionality
    const card = document.getElementById('draggable-card');
    let isDragging = false, startX, startY, origX, origY;
    card.addEventListener('mousedown', function(e) {
        isDragging = true;
        card.style.position = 'fixed';
        card.style.zIndex = 1000;
        startX = e.clientX;
        startY = e.clientY;
        const rect = card.getBoundingClientRect();
        origX = rect.left;
        origY = rect.top;
        document.body.style.userSelect = 'none';
    });
    document.addEventListener('mousemove', function(e) {
        if (!isDragging) return;
        let dx = e.clientX - startX;
        let dy = e.clientY - startY;
        card.style.left = (origX + dx) + 'px';
        card.style.top = (origY + dy) + 'px';
    });
    document.addEventListener('mouseup', function() {
        if (isDragging) {
            isDragging = false;
            document.body.style.userSelect = '';
        }
    });
    
    // Form submission handling
    document.getElementById('submitInscription').addEventListener('click', function() {
        const form = document.getElementById('inscriptionForm');
        const messageDiv = document.getElementById('inscriptionMessage');
        
        // Simple validation
        const inputs = form.querySelectorAll('input[required]');
        let isValid = true;
        inputs.forEach(input => {
            if (!input.value.trim()) {
                isValid = false;
                input.classList.add('is-invalid');
            } else {
                input.classList.remove('is-invalid');
            }
        });
        
        if (!isValid) {
            messageDiv.textContent = 'Veuillez remplir tous les champs requis.';
            messageDiv.classList.add('alert-danger');
            messageDiv.classList.remove('d-none', 'alert-success');
            return;
        }
        
        // Collect form data
        const formData = new FormData(form);
        
        // Send AJAX request
        fetch('{{ path("app_inscription_new") }}', {
            method: 'POST',
            body: formData
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                messageDiv.textContent = 'Inscription réussie!';
                messageDiv.classList.add('alert-success');
                messageDiv.classList.remove('d-none', 'alert-danger');
                form.reset();
                setTimeout(() => {
                    const modal = bootstrap.Modal.getInstance(document.getElementById('inscriptionModal'));
                    modal.hide();
                    // Optionally reload the page to show updated status
                    // window.location.reload();
                }, 2000);
            } else {
                messageDiv.textContent = data.message || 'Une erreur est survenue.';
                messageDiv.classList.add('alert-danger');
                messageDiv.classList.remove('d-none', 'alert-success');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            messageDiv.textContent = 'Une erreur est survenue lors de la communication avec le serveur.';
            messageDiv.classList.add('alert-danger');
            messageDiv.classList.remove('d-none', 'alert-success');
        });
    });

    // Modal initialization (ensure works everywhere)
    document.addEventListener('DOMContentLoaded', function() {
        const inscriptionModal = document.getElementById('inscriptionModal');
        if (inscriptionModal && typeof bootstrap !== 'undefined') {
            new bootstrap.Modal(inscriptionModal);
        }
    });
})();
</script>

