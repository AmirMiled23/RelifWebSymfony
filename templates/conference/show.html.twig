<script>
document.addEventListener('DOMContentLoaded', function() {
    // Initialize Stripe
    const stripe = Stripe('pk_test_51Qyl1xFMW7DU2mdyb3QIMJAuNVrsfWjnXIV42wX1tJVx54ltqyLqjhFmme03D71tQjDu6x3Kk40fwu0JwlfMLuKe00CB3zhiW9');
    const elements = stripe.elements();
    
    // Create card element
    const cardElement = elements.create('card');
    
    // Mount card element when modal is shown
    document.getElementById('stripePaymentModal').addEventListener('shown.bs.modal', function() {
        cardElement.mount('#card-element');
    });
    
    // Handle Stripe payment button click
    document.getElementById('stripe-submit').addEventListener('click', function() {
        const registrationData = JSON.parse(sessionStorage.getItem('registrationData'));
        document.getElementById('stripe-inscription-id').value = registrationData.inscriptionId;
        
        this.disabled = true;
        document.getElementById('stripe-loading').classList.remove('d-none');
        
        stripe.createToken(cardElement).then(function(result) {
            if (result.error) {
                // Show error to customer
                const errorElement = document.getElementById('card-errors');
                errorElement.textContent = result.error.message;
                document.getElementById('stripe-submit').disabled = false;
                document.getElementById('stripe-loading').classList.add('d-none');
            } else {
                // Create a hidden input with the token and submit the form
                const form = document.getElementById('stripe-payment-form');
                const hiddenInput = document.createElement('input');
                hiddenInput.setAttribute('type', 'hidden');
                hiddenInput.setAttribute('name', 'stripeToken');
                hiddenInput.setAttribute('value', result.token.id);
                form.appendChild(hiddenInput);
                
                // Submit the form
                form.submit();
            }
        });
    });
    
    // Update hidden fields for other payment methods
    document.querySelectorAll('.payment-method-btn').forEach(btn => {
        btn.addEventListener('click', function() {
            const paymentType = this.getAttribute('data-payment-type');
            if (paymentType === 'Virement SEPA' || paymentType === 'Prélèvement SEPA') {
                document.getElementById('sepa-payment-type').value = paymentType;
            }
            
            // Set inscription ID for all forms
            const registrationData = JSON.parse(sessionStorage.getItem('registrationData'));
            document.getElementById('sepa-inscription-id').value = registrationData.inscriptionId;
            document.getElementById('wallet-inscription-id').value = registrationData.inscriptionId;
        });
    });
});
</script>

