{% extends 'base.html.twig' %}

{% block title %}Conference Details{% endblock %}

{% block body %}
<style>
    .conference-details-bg {
        background: url('{{ asset('assets/front/images/backgroundRelif.png') }}') center center/cover no-repeat;
        min-height: 100vh;
        padding-top: 60px;
        padding-bottom: 60px;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .conference-details-card {
        background: rgba(255,255,255,0.95);
        border-radius: 1rem;
        box-shadow: 0 0.5rem 2rem rgba(0,0,0,0.15);
    }
    /* Add some styles for the form */
    .form-control:focus {
        border-color: #4e73df;
        box-shadow: 0 0 0 0.2rem rgba(78, 115, 223, 0.25);
    }
    .btn-register {
        background-color: #1cc88a;
        border-color: #1cc88a;
        color: white;
        margin-bottom: 10px;
    }
    .btn-register:hover {
        background-color: #169a6e;
        border-color: #169a6e;
    }
</style>
<div class="conference-details-bg">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card conference-details-card border-0" id="draggable-card">
                    <div class="card-body">
                        <h2 class="card-title mb-3 text-primary">{{ conference.titre }}</h2>
                        <h5 class="card-subtitle mb-3 text-muted">{{ conference.theme }}</h5>
                        <ul class="list-group list-group-flush mb-3">
                            <li class="list-group-item"><strong>Date:</strong> {{ conference.dateConference ? conference.dateConference|date('Y-m-d') : 'N/A' }}</li>
                            <li class="list-group-item"><strong>Presenter:</strong> {{ conference.presenteur }}</li>
                            <li class="list-group-item"><strong>Location:</strong> {{ conference.lieu }}</li>
                            <li class="list-group-item"><strong>Places:</strong> {{ conference.nbPlace }}</li>
                            <li class="list-group-item"><strong>Price:</strong> {{ conference.prix }} TND</li>
                            <li class="list-group-item"><strong>Status:</strong> {{ conference.status }}</li>
                            <li class="list-group-item"><strong>Resource:</strong> {{ conference.resource }}</li>
                        </ul>
                        <!-- Add Register Button -->
                        <button type="button" class="btn btn-register w-100 mb-2" data-bs-toggle="modal" data-bs-target="#inscriptionModal">
                            <i class="fas fa-user-plus"></i> S'inscrire
                        </button>
                        <a href="{{ path('app_conference_index') }}" class="btn btn-outline-primary w-100 mt-2">
                            <i class="fas fa-arrow-left"></i> Back to list
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Registration Modal -->
<div class="modal fade" id="inscriptionModal" tabindex="-1" aria-labelledby="inscriptionModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="inscriptionModalLabel">Inscription à la conférence</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="inscriptionForm">
                    <div class="mb-3">
                        <label for="nom" class="form-label">Nom</label>
                        <input type="text" class="form-control" id="nom" name="nom" required>
                    </div>
                    <div class="mb-3">
                        <label for="prenom" class="form-label">Prénom</label>
                        <input type="text" class="form-control" id="prenom" name="prenom" required>
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="email" name="email" required>
                    </div>
                    <div class="mb-3">
                        <label for="telephone" class="form-label">Téléphone</label>
                        <input type="tel" class="form-control" id="telephone" name="telephone" required>
                    </div>
                    <input type="hidden" name="conference_id" value="{{ conference.id }}">
                </form>
                <div id="inscriptionMessage" class="alert d-none"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                <button type="button" class="btn btn-primary" id="submitInscription">Confirmer l'inscription</button>
            </div>
        </div>
    </div>
</div>

<script>
(function() {
    // Draggable card functionality
    const card = document.getElementById('draggable-card');
    let isDragging = false, startX, startY, origX, origY;
    card.addEventListener('mousedown', function(e) {
        isDragging = true;
        card.style.position = 'fixed';
        card.style.zIndex = 1000;
        startX = e.clientX;
        startY = e.clientY;
        const rect = card.getBoundingClientRect();
        origX = rect.left;
        origY = rect.top;
        document.body.style.userSelect = 'none';
    });
    document.addEventListener('mousemove', function(e) {
        if (!isDragging) return;
        let dx = e.clientX - startX;
        let dy = e.clientY - startY;
        card.style.left = (origX + dx) + 'px';
        card.style.top = (origY + dy) + 'px';
    });
    document.addEventListener('mouseup', function() {
        if (isDragging) {
            isDragging = false;
            document.body.style.userSelect = '';
        }
    });
    
    // Form submission handling
    document.getElementById('submitInscription').addEventListener('click', function() {
        const form = document.getElementById('inscriptionForm');
        const messageDiv = document.getElementById('inscriptionMessage');
        
        // Simple validation
        const inputs = form.querySelectorAll('input[required]');
        let isValid = true;
        inputs.forEach(input => {
            if (!input.value.trim()) {
                isValid = false;
                input.classList.add('is-invalid');
            } else {
                input.classList.remove('is-invalid');
            }
        });
        
        if (!isValid) {
            messageDiv.textContent = 'Veuillez remplir tous les champs requis.';
            messageDiv.classList.add('alert-danger');
            messageDiv.classList.remove('d-none', 'alert-success');
            return;
        }
        
        // Collect form data
        const formData = new FormData(form);
        
        // Send AJAX request
        fetch('{{ path("app_inscription_new") }}', {
            method: 'POST',
            body: formData
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                messageDiv.textContent = 'Inscription réussie!';
                messageDiv.classList.add('alert-success');
                messageDiv.classList.remove('d-none', 'alert-danger');
                form.reset();
                setTimeout(() => {
                    const modal = bootstrap.Modal.getInstance(document.getElementById('inscriptionModal'));
                    modal.hide();
                    // Optionally reload the page to show updated status
                    // window.location.reload();
                }, 2000);
            } else {
                messageDiv.textContent = data.message || 'Une erreur est survenue.';
                messageDiv.classList.add('alert-danger');
                messageDiv.classList.remove('d-none', 'alert-success');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            messageDiv.textContent = 'Une erreur est survenue lors de la communication avec le serveur.';
            messageDiv.classList.add('alert-danger');
            messageDiv.classList.remove('d-none', 'alert-success');
        });
    });

    // Ensure the modal is properly initialized with Bootstrap
    document.addEventListener('DOMContentLoaded', function() {
        // Make sure modal is properly initialized with Bootstrap
        const inscriptionModal = document.getElementById('inscriptionModal');
        const modal = new bootstrap.Modal(inscriptionModal);
        
        // Add explicit event listener to the button
        document.querySelector('.btn-register').addEventListener('click', function(e) {
            e.preventDefault();
            modal.show();
        });
        
        // Reset form and error messages when modal is closed
        inscriptionModal.addEventListener('hidden.bs.modal', function() {
            document.getElementById('inscriptionForm').reset();
            const messageDiv = document.getElementById('inscriptionMessage');
            messageDiv.classList.add('d-none');
            messageDiv.classList.remove('alert-danger', 'alert-success');
            
            // Remove validation classes
            const inputs = document.querySelectorAll('.form-control');
            inputs.forEach(input => {
                input.classList.remove('is-invalid');
            });
        });

        // Modified form submission to handle payment flow
        document.getElementById('submitInscription').addEventListener('click', function() {
            const form = document.getElementById('inscriptionForm');
            const messageDiv = document.getElementById('inscriptionMessage');
            
            // Simple validation
            const inputs = form.querySelectorAll('input[required]');
            let isValid = true;
            inputs.forEach(input => {
                if (!input.value.trim()) {
                    isValid = false;
                    input.classList.add('is-invalid');
                } else {
                    input.classList.remove('is-invalid');
                }
            });
            
            if (!isValid) {
                messageDiv.textContent = 'Veuillez remplir tous les champs requis.';
                messageDiv.classList.add('alert-danger');
                messageDiv.classList.remove('d-none', 'alert-success');
                return;
            }
            
            // Collect form data
            const formData = new FormData(form);
            
            // Send AJAX request for registration
            fetch('{{ path("app_inscription_new") }}', {
                method: 'POST',
                body: formData
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    messageDiv.textContent = 'Inscription réussie!';
                    messageDiv.classList.add('alert-success');
                    messageDiv.classList.remove('d-none', 'alert-danger');
                    
                    // Show payment confirmation
                    setTimeout(() => {
                        const modalInstance = bootstrap.Modal.getInstance(inscriptionModal);
                        modalInstance.hide();
                        
                        // Store registration data for payment processing
                        sessionStorage.setItem('registrationData', JSON.stringify({
                            conferenceId: {{ conference.id }},
                            conferenceTitle: "{{ conference.titre }}",
                            conferenceCost: {{ conference.prix }},
                            inscriptionId: data.inscriptionId || 0,
                            nom: document.getElementById('nom').value,
                            prenom: document.getElementById('prenom').value,
                            email: document.getElementById('email').value
                        }));
                        
                        // Show payment confirmation modal
                        const paymentConfirmModal = new bootstrap.Modal(document.getElementById('paymentConfirmModal'));
                        paymentConfirmModal.show();
                    }, 1500);
                } else {
                    messageDiv.textContent = data.message || 'Une erreur est survenue.';
                    messageDiv.classList.add('alert-danger');
                    messageDiv.classList.remove('d-none', 'alert-success');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                messageDiv.textContent = 'Une erreur est survenue lors de la communication avec le serveur.';
                messageDiv.classList.add('alert-danger');
                messageDiv.classList.remove('d-none', 'alert-success');
            });
            
            // Prevent default form submission
            return false;
        });

        // Payment method selection handler
        document.getElementById('proceedToPayment').addEventListener('click', function() {
            const paymentConfirmModal = bootstrap.Modal.getInstance(document.getElementById('paymentConfirmModal'));
            paymentConfirmModal.hide();
            const paymentMethodModal = new bootstrap.Modal(document.getElementById('paymentMethodModal'));
            paymentMethodModal.show();
        });

        // Payment method buttons
        document.querySelectorAll('.payment-method-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                const paymentType = this.getAttribute('data-payment-type');
                
                // Store selected payment method
                sessionStorage.setItem('paymentMethod', paymentType);
                
                // Close payment method modal
                const paymentMethodModal = bootstrap.Modal.getInstance(document.getElementById('paymentMethodModal'));
                paymentMethodModal.hide();
                
                // Show appropriate payment form based on selection
                if (paymentType === 'Carte Bancaire') {
                    // Show credit card form with Stripe
                    const stripeModal = new bootstrap.Modal(document.getElementById('stripePaymentModal'));
                    stripeModal.show();
                    initStripeElements();
                } else if (paymentType === 'GoogleApplePay') {
                    // Show Google/Apple Pay options
                    const digitalWalletModal = new bootstrap.Modal(document.getElementById('digitalWalletModal'));
                    digitalWalletModal.show();
                } else {
                    // For SEPA options, show the SEPA form
                    const sepaModal = new bootstrap.Modal(document.getElementById('sepaPaymentModal'));
                    sepaModal.show();
                }
            });
        });

        // Initialize Stripe elements
        let stripe = null;
        let elements = null;
        let card = null;
        
        function initStripeElements() {
            if (stripe) return; // Only initialize once
            
            // Initialize Stripe with the public key
            stripe = Stripe('pk_test_51Qyl1xFMW7DU2mdyb3QIMJAuNVrsfWjnXIV42wX1tJVx54ltqyLqjhFmme03D71tQjDu6x3Kk40fwu0JwlfMLuKe00CB3zhiW9');
            elements = stripe.elements();
            
            // Create card element
            card = elements.create('card', {
                style: {
                    base: {
                        color: '#32325d',
                        fontFamily: '"Helvetica Neue", Helvetica, sans-serif',
                        fontSmoothing: 'antialiased',
                        fontSize: '16px',
                        '::placeholder': {
                            color: '#aab7c4'
                        }
                    },
                    invalid: {
                        color: '#fa755a',
                        iconColor: '#fa755a'
                    }
                }
            });
            
            // Mount the card element
            card.mount('#card-element');
            
            // Handle validation errors
            card.addEventListener('change', function(event) {
                const displayError = document.getElementById('card-errors');
                if (event.error) {
                    displayError.textContent = event.error.message;
                } else {
                    displayError.textContent = '';
                }
            });
        }

        // Handle Stripe form submission
        document.getElementById('stripe-payment-form').addEventListener('submit', function(event) {
            event.preventDefault();
            
            const stripeSubmitBtn = document.getElementById('stripe-submit');
            const loadingSpinner = document.getElementById('stripe-loading');
            
            // Show loading spinner
            stripeSubmitBtn.disabled = true;
            loadingSpinner.classList.remove('d-none');
            
            // Get registration data
            const registrationData = JSON.parse(sessionStorage.getItem('registrationData'));
            
            // Create payment intent on server
            fetch('{{ path("app_payment_create_intent") }}', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    amount: registrationData.conferenceCost * 100, // Amount in cents
                    currency: 'eur',
                    payment_method_types: ['card'],
                    inscription_id: registrationData.inscriptionId,
                    conference_id: registrationData.conferenceId,
                    payment_type: sessionStorage.getItem('paymentMethod')
                })
            })
            .then(response => response.json())
            .then(data => {
                if (data.clientSecret) {
                    // Confirm card payment
                    return stripe.confirmCardPayment(data.clientSecret, {
                        payment_method: {
                            card: card,
                            billing_details: {
                                name: registrationData.nom + ' ' + registrationData.prenom,
                                email: registrationData.email
                            }
                        }
                    });
                } else {
                    throw new Error('Failed to create payment intent');
                }
            })
            .then(result => {
                if (result.error) {
                    // Show error message
                    const errorElement = document.getElementById('card-errors');
                    errorElement.textContent = result.error.message;
                    
                    // Reset button state
                    stripeSubmitBtn.disabled = false;
                    loadingSpinner.classList.add('d-none');
                } else if (result.paymentIntent && result.paymentIntent.status === 'succeeded') {
                    // Payment succeeded - update payment record
                    return fetch('{{ path("app_payment_update") }}', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({
                            payment_id: result.paymentIntent.id,
                            inscription_id: registrationData.inscriptionId,
                            status: 'completed',
                            amount: registrationData.conferenceCost,
                            payment_type: sessionStorage.getItem('paymentMethod')
                        })
                    });
                }
            })
            .then(response => {
                if (response) return response.json();
            })
            .then(data => {
                if (data && data.success) {
                    // Show success modal
                    const stripeModal = bootstrap.Modal.getInstance(document.getElementById('stripePaymentModal'));
                    stripeModal.hide();
                    
                    const successModal = new bootstrap.Modal(document.getElementById('paymentSuccessModal'));
                    successModal.show();
                    
                    // Clear session storage
                    setTimeout(() => {
                        sessionStorage.removeItem('registrationData');
                        sessionStorage.removeItem('paymentMethod');
                    }, 1000);
                }
            })
            .catch(error => {
                console.error('Payment error:', error);
                const errorElement = document.getElementById('card-errors');
                errorElement.textContent = 'An error occurred during payment processing.';
                
                // Reset button state
                stripeSubmitBtn.disabled = false;
                loadingSpinner.classList.add('d-none');
            });
        });

        // Handle SEPA form submission
        document.getElementById('sepa-form').addEventListener('submit', function(event) {
            event.preventDefault();
            
            // Get form data
            const accountHolder = document.getElementById('sepa-account-holder').value;
            const iban = document.getElementById('sepa-iban').value;
            
            // Basic IBAN validation
            if (!accountHolder || !iban) {
                document.getElementById('sepa-errors').textContent = 'Please fill in all fields';
                return;
            }
            
            // Get registration data
            const registrationData = JSON.parse(sessionStorage.getItem('registrationData'));
            
            // Submit SEPA payment
            fetch('{{ path("app_payment_process_sepa") }}', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    account_holder: accountHolder,
                    iban: iban,
                    amount: registrationData.conferenceCost,
                    inscription_id: registrationData.inscriptionId,
                    conference_id: registrationData.conferenceId,
                    payment_type: sessionStorage.getItem('paymentMethod')
                })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    // Show success modal
                    const sepaModal = bootstrap.Modal.getInstance(document.getElementById('sepaPaymentModal'));
                    sepaModal.hide();
                    
                    const successModal = new bootstrap.Modal(document.getElementById('paymentSuccessModal'));
                    successModal.show();
                    
                    // Clear session storage
                    setTimeout(() => {
                        sessionStorage.removeItem('registrationData');
                        sessionStorage.removeItem('paymentMethod');
                    }, 1000);
                } else {
                    document.getElementById('sepa-errors').textContent = data.message || 'Payment processing failed';
                }
            })
            .catch(error => {
                console.error('SEPA error:', error);
                document.getElementById('sepa-errors').textContent = 'An error occurred during payment processing';
            });
        });

        // Handle digital wallet form submission
        document.getElementById('digital-wallet-form').addEventListener('submit', function(event) {
            event.preventDefault();
            
            // Get registration data
            const registrationData = JSON.parse(sessionStorage.getItem('registrationData'));
            
            // Submit digital wallet payment
            fetch('{{ path("app_payment_process_digital") }}', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    amount: registrationData.conferenceCost,
                    inscription_id: registrationData.inscriptionId,
                    conference_id: registrationData.conferenceId,
                    payment_type: 'GoogleApplePay',
                    wallet_type: document.querySelector('input[name="wallet-type"]:checked').value
                })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    // Show success modal
                    const walletModal = bootstrap.Modal.getInstance(document.getElementById('digitalWalletModal'));
                    walletModal.hide();
                    
                    const successModal = new bootstrap.Modal(document.getElementById('paymentSuccessModal'));
                    successModal.show();
                    
                    // Clear session storage
                    setTimeout(() => {
                        sessionStorage.removeItem('registrationData');
                        sessionStorage.removeItem('paymentMethod');
                    }, 1000);
                } else {
                    document.getElementById('digital-wallet-errors').textContent = data.message || 'Payment processing failed';
                }
            })
            .catch(error => {
                console.error('Digital wallet error:', error);
                document.getElementById('digital-wallet-errors').textContent = 'An error occurred during payment processing';
            });
        });
        
        // Close button handlers for all modals to return to conference view
        document.querySelectorAll('.return-to-conference').forEach(btn => {
            btn.addEventListener('click', function() {
                // Clear session storage
                sessionStorage.removeItem('registrationData');
                sessionStorage.removeItem('paymentMethod');
                
                // Reload page
                window.location.reload();
            });
        });
    });
})();
</script>

<!-- Payment Confirmation Modal -->
