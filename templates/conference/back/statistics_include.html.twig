<script>
document.addEventListener('DOMContentLoaded', function() {
    // Find the dashboard nav item
    const dashboardItem = document.querySelector('.nav-item');
    
    if (dashboardItem) {
        // Create statistics button
        const statsItem = document.createElement('li');
        statsItem.className = 'nav-item';
        statsItem.innerHTML = `
            <a href="#" class="nav-link d-flex align-items-center" id="stats-button" data-bs-toggle="modal" data-bs-target="#statisticsModal">
                <i class="bi bi-graph-up me-2"></i>
                Statistics
            </a>
        `;
        
        // Insert after dashboard
        dashboardItem.parentNode.insertBefore(statsItem, dashboardItem.nextSibling);
        
        // Add bootstrap icons if not already included
        if (!document.querySelector('link[href*="bootstrap-icons"]')) {
            const iconLink = document.createElement('link');
            iconLink.rel = 'stylesheet';
            iconLink.href = 'https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css';
            document.head.appendChild(iconLink);
        }
    }
});
</script>
