{{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
{% for field in form %}
    {% if field.vars.name != '_token' %}
    <div class="mb-3">
        {{ form_label(field, null, {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(field, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(field) }}
    </div>
    {% endif %}
{% endfor %}
<button class="btn btn-primary btn-lg w-100 mt-3" style="font-weight:600;letter-spacing:1px;">
    {{ button_label|default('Save') }} <i class="fas fa-save ms-2"></i>
</button>
{{ form_end(form) }}
