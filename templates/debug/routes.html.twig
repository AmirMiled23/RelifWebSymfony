{% extends 'base.html.twig' %}

{% block title %}Debug Routes{% endblock %}

{% block body %}
<div class="container-fluid mt-4">
    <h1>Available Routes</h1>
    
    <div class="mb-3">
        <input class="form-control" id="routeSearch" type="text" placeholder="Search routes...">
    </div>
    
    <div class="table-responsive">
        <table class="table table-striped table-bordered" id="routesTable">
            <thead class="table-dark">
                <tr>
                    <th>Name</th>
                    <th>Path</th>
                    <th>Methods</th>
                    <th>Controller</th>
                </tr>
            </thead>
            <tbody>
                {% for route in routes %}
                    <tr class="{% if 'statistics' in route.path %}table-success{% endif %}">
                        <td>{{ route.name }}</td>
                        <td>{{ route.path }}</td>
                        <td>{{ route.methods|join(', ')|default('ANY') }}</td>
                        <td>{{ route.controller }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>

<script>
document.getElementById('routeSearch').addEventListener('keyup', function() {
    const searchText = this.value.toLowerCase();
    const rows = document.querySelectorAll("#routesTable tbody tr");
    
    rows.forEach(row => {
        const text = row.textContent.toLowerCase();
        row.style.display = text.includes(searchText) ? "" : "none";
    });
});
</script>
{% endblock %}
