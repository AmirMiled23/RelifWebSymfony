<div class="form-container mt-4">
    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
        <div class="form-wrapper py-3">
            {% for field in form %}
                {% if field.vars.name != '_token' %}
                <div class="mb-3">
                    {{ form_label(field, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(field, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(field) }}
                </div>
                {% endif %}
            {% endfor %}
        </div>
        <div class="mt-4">
            <button class="btn {{ button_label is defined ? 'btn-warning' : 'btn-success' }} w-100">{{ button_label|default('Save') }}</button>
        </div>
    {{ form_end(form) }}
</div>

<style>
    .form-container {
        position: relative;
        margin-top: 25px;
        padding-top: 15px;
        border-top: 1px solid #e9ecef;
    }
    
    .form-wrapper .form-group,
    .form-wrapper .mb-3 {
        margin-bottom: 15px;
    }
    
    .form-wrapper label {
        font-weight: 500;
        margin-bottom: 8px;
        display: block;
    }
</style>
