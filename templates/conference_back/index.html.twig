{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.10/main.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/moment@2.30.1/moment.min.js"></script>
    <script src="https://unpkg.com/@popperjs/core@2"></script>
    <script src="https://unpkg.com/tippy.js@6"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
    document.addEventListener('DOMContentLoaded', function() {
        // Modal accessibility fix: ensure only one modal is open at a time
        const modals = document.querySelectorAll('.modal');
        modals.forEach(modal => {
            modal.addEventListener('show.bs.modal', function () {
                modals.forEach(m => {
                    if (m !== modal && m.classList.contains('show')) {
                        bootstrap.Modal.getInstance(m).hide();
                    }
                });
            });
        });
        // Focus only after modal is shown
        document.getElementById('calendarModal').addEventListener('shown.bs.modal', function () {
            document.getElementById('calendar').focus && document.getElementById('calendar').focus();
        });
        document.getElementById('statisticsModal').addEventListener('shown.bs.modal', function () {
            document.querySelector('#statisticsModal .btn-close').focus();
        });
        // Initialize calendar
        const calendarEl = document.getElementById('calendar');
        if (calendarEl) {
            const calendar = new FullCalendar.Calendar(calendarEl, {
                initialView: 'dayGridMonth',
                headerToolbar: {
                    left: 'prev,next today',
                    center: 'title',
                    right: 'dayGridMonth,timeGridWeek,timeGridDay'
                },
                events: '{{ path("app_conference_back_events") }}',
                eventClick: function(info) {
                    // Show event details in modal
                    const modal = new bootstrap.Modal(document.getElementById('conferenceDetailModal'));
                    document.getElementById('conferenceDetailBody').innerHTML = `
                        <h5>${info.event.title}</h5>
                        <p><strong>Date:</strong> ${info.event.start.toLocaleDateString()}</p>
                        <p><strong>Location:</strong> ${info.event.extendedProps.location || 'N/A'}</p>
                        <p><strong>Presenter:</strong> ${info.event.extendedProps.presenter || 'N/A'}</p>
                    `;
                    modal.show();
                }
            });
            calendar.render();
        }

        // Initialize statistics modal
        const statsModal = new bootstrap.Modal(document.getElementById('statisticsModal'));
        
        // Load statistics when modal is shown
        document.getElementById('statisticsModal').addEventListener('show.bs.modal', function() {
            const loadingDiv = document.getElementById('statsLoading');
            const contentDiv = document.getElementById('statsContent');
            
            loadingDiv.style.display = 'block';
            contentDiv.style.display = 'none';
            
            fetch('{{ path("app_conference_stats_data") }}')
                .then(response => response.json())
                .then(data => {
                    loadingDiv.style.display = 'none';
                    contentDiv.style.display = 'block';
                    
                    // Update statistics content
                    renderOverviewCharts(data);
                })
                .catch(error => {
                    console.error('Error loading statistics:', error);
                    loadingDiv.innerHTML = '<div class="alert alert-danger">Error loading statistics</div>';
                });
        });
    });

    // Chart rendering functions
    function renderOverviewCharts(data) {
        // Update key metrics
        document.getElementById('totalConferences').textContent = data.overview.totalConferences;
        document.getElementById('totalRevenue').textContent = data.overview.totalRevenue.toLocaleString() + ' TND';
        document.getElementById('averagePrice').textContent = data.overview.averagePrice.toFixed(2) + ' TND';
        document.getElementById('totalCapacity').textContent = data.overview.totalCapacity.toLocaleString();
        
        // Monthly summary chart
        const monthlySummaryCtx = document.getElementById('monthlySummaryChart');
        if (monthlySummaryCtx && !monthlySummaryCtx.chart) {
            monthlySummaryCtx.chart = new Chart(monthlySummaryCtx, {
                type: 'bar',
                data: {
                    labels: data.monthly.labels,
                    datasets: [{
                        label: 'Conferences',
                        data: data.monthly.conferences,
                        backgroundColor: 'rgba(67, 160, 71, 0.7)',
                        borderColor: '#43a047',
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: { legend: { display: false } }
                }
            });
        }
        
        // Status pie chart
        const statusPieCtx = document.getElementById('statusPieChart');
        if (statusPieCtx && !statusPieCtx.chart) {
            statusPieCtx.chart = new Chart(statusPieCtx, {
                type: 'pie',
                data: {
                    labels: data.status.labels,
                    datasets: [{
                        data: data.status.counts,
                        backgroundColor: ['#66bb6a', '#ffc107', '#bdbdbd'],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: { legend: { position: 'bottom' } }
                }
            });
        }
    }
    </script>
