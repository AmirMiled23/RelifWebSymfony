        console.log("Base template loaded - AI Assistant check");
        // Check if the button exists
        var assistantBtn = document.getElementById('aiAssistantToggle');
        if (assistantBtn) {
            console.log("AI Assistant button found");
            // Add a fallback click handler just to be sure
            assistantBtn.addEventListener('click', function() {
                console.log("AI Assistant button clicked from base.html.twig");
                var panel = document.getElementById('aiAssistantPanel');
                if (panel) {
                    if (panel.style.display === 'flex') {
                        panel.style.display = 'none';
                    } else {
                        panel.style.display = 'flex';
                    }
                }
            });
        } else {
            console.error("AI Assistant button not found!");
