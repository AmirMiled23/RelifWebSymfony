{% extends 'base.html.twig' %}

{% block title %}ReservationMateriel index{% endblock %}

{% block body %}
    <h1 class="mb-4 text-center">Liste des réservations matériels</h1>

    <a class="btn btn-secondary mb-3" href="{{ path('app_materiel_index') }}">Liste des matériels</a>

    <form method="get" action="{{ path('app_reservation_materiel_search') }}" class="mb-4">
        <div class="row">
            <div class="col">
                <input type="text" name="nomMateriel" class="form-control" placeholder="Nom du matériel" value="{{ app.request.query.get('nomMateriel') }}">
            </div>
            <div class="col">
                <input type="date" name="dateDebut" class="form-control" placeholder="Date début" value="{{ app.request.query.get('dateDebut') }}">
            </div>
            <div class="col">
                <input type="date" name="dateFin" class="form-control" placeholder="Date fin" value="{{ app.request.query.get('dateFin') }}">
            </div>
            <div class="col">
                <input type="number" name="quantiteMin" class="form-control" placeholder="Quantité min" value="{{ app.request.query.get('quantiteMin') }}">
            </div>
            <div class="col">
                <input type="number" name="quantiteMax" class="form-control" placeholder="Quantité max" value="{{ app.request.query.get('quantiteMax') }}">
            </div>
            <div class="col">
                <select name="sort" class="form-control">
                    <option value="asc" {% if app.request.query.get('sort') == 'asc' %}selected{% endif %}>Date croissante</option>
                    <option value="desc" {% if app.request.query.get('sort') == 'desc' %}selected{% endif %}>Date décroissante</option>
                </select>
            </div>
            <div class="col">
                <button type="submit" class="btn btn-primary">Rechercher</button>
            </div>
        </div>
    </form>

    <div class="row">
        {% for reservation in reservation_materiels %}
            <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h5 class="card-title mb-0">{{ reservation.materiel ? reservation.materiel.nomMateriel : 'Non spécifié' }}</h5>
                    </div>
                    <div class="card-body">
                        <p class="card-text"><strong>Date début:</strong> {{ reservation.dateDebut ? reservation.dateDebut|date('Y-m-d') : 'Non spécifiée' }}</p>
                        <p class="card-text"><strong>Date fin:</strong> {{ reservation.dateFin ? reservation.dateFin|date('Y-m-d') : 'Non spécifiée' }}</p>
                        <p class="card-text"><strong>Quantité réservée:</strong> {{ reservation.quantiteReservee }}</p>
                    </div>
                    <div class="card-footer d-flex justify-content-between">
                        <a href="{{ path('app_reservation_materiel_show', {'id_reservation': reservation.idReservation}) }}" class="btn btn-sm btn-outline-primary">Voir</a>
                        <a href="{{ path('app_reservation_materiel_edit', {'id_reservation': reservation.idReservation}) }}" class="btn btn-sm btn-outline-secondary">Modifier</a>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <div class="alert alert-warning text-center" role="alert">
                    Aucune réservation trouvée.
                </div>
            </div>
        {% endfor %}
    </div>

    <div class="d-flex justify-content-between mt-4">
        <a href="{{ path('app_reservation_materiel_new') }}" class="btn btn-primary">Créer une nouvelle réservation</a>
        <a href="{{ path('app_reservation_materiel_stats') }}" class="btn btn-info mb-3">Voir Statistiques</a>

    </div>
{% endblock %}
