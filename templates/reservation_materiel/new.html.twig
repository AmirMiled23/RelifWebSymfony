{% extends 'base.html.twig' %}

{% block title %}Ajouter une réservation{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .card {
            border: none;
            border-radius: 10px;
            overflow: hidden;
            margin-bottom: 2rem;
        }
        
        .card-header {
            padding: 1.25rem 1.5rem;
            border-bottom: none;
            background-color: #0069d9; /* Bleu uni comme dans l'image */
            color: white;
        }
        
        .card-body {
            padding: 2rem;
            background-color: #80bdff;
        }
        
        .form-group {
            margin-bottom: 1.5rem;
        }
        
        .form-control {
            border-radius: 5px;
            padding: 12px 15px;
            border: 1px solid #80bdff;
            transition: all 0.3s ease;
        }
        
        .form-control:focus {
            border-color: #80bdff;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
        }
        
        .form-label {
            font-weight: 600;
            margin-bottom: 0.5rem;
            color: #495057;
            display: block;
        }
        
        .btn {
            padding: 10px 25px;
            border-radius: 5px;
            font-weight: 500;
            transition: all 0.3s ease;
        }
        
        .btn-success {
            background-color: #28a745;
            border-color: #28a745;
        }
        
        .btn-success:hover {
            background-color: #218838;
        }
        
        .btn-secondary {
            background-color:rgba(0, 123, 255, 0.25);
            border-color: #6c757d;
        }
        
        .btn-secondary:hover {
            background-color: #5a6268;
        }
        
        .date-input-group {
            display: flex;
            gap: 15px;
            margin-bottom: 1.5rem;
        }
        
        .date-input {
            flex: 1;
        }
        
        .material-select {
            margin-bottom: 1.5rem;
        }
        
        .quantity-input {
            margin-bottom: 1.5rem;
        }
        
        .button-group {
            display: flex;
            justify-content: space-between;
            margin-top: 2rem;
        }
        
        .shadow-lg {
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1) !important;
        }
        
        .breadcrumb {
            background-color: #f1f5f9;
            border-radius: 5px;
            padding: 0.75rem 1rem;
        }
        
        .breadcrumb-item a {
            color: #4a6baf;
            text-decoration: none;
            font-weight: 500;
        }
    </style>
{% endblock %}

{% block body %}
<div class="container mt-4">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('app_reservation_materiel_index') }}">Liste des réservations</a></li>
            <li class="breadcrumb-item active" aria-current="page">Nouvelle réservation</li>
        </ol>
    </nav>

    <div class="card shadow-lg">
        <div class="card-header text-white">
            <h4 class="mb-0"><i class="fas fa-plus-circle me-2"></i> Ajouter une nouvelle réservation</h4>
        </div>
        <div class="card-body">
            {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
            
            <div class="date-input-group">
                <div class="date-input">
                    {{ form_label(form.date_debut, 'Date de début', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.date_debut, {'attr': {'class': 'form-control'}}) }}
                    <div class="invalid-feedback">
                        {{ form_errors(form.date_debut) }}
                    </div>
                </div>
                
                <div class="date-input">
                    {{ form_label(form.date_fin, 'Date de fin', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.date_fin, {'attr': {'class': 'form-control'}}) }}
                    <div class="invalid-feedback">
                        {{ form_errors(form.date_fin) }}
                    </div>
                </div>
            </div>
            
            <div class="material-select">
                {{ form_label(form.materiel, 'Matériel', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.materiel, {'attr': {'class': 'form-control'}}) }}
                <div class="invalid-feedback">
                    {{ form_errors(form.materiel) }}
                </div>
            </div>
            
            <div class="quantity-input">
                {{ form_label(form.quantite_reservee, 'Quantité', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.quantite_reservee, {'attr': {'class': 'form-control'}}) }}
                <div class="invalid-feedback">
                    {{ form_errors(form.quantite_reservee) }}
                </div>
            </div>
            
            <div class="button-group">
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-save me-2"></i> Enregistrer
                </button>
                <a href="{{ path('app_reservation_materiel_index') }}" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-2"></i> Retour à la liste
                </a>
            </div>
            
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}