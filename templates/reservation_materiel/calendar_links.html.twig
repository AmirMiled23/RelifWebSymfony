{% extends 'base.html.twig' %}

{% block title %}Ajouter au calendrier{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h2>Ajouter la réservation à votre calendrier</h2>
        
        <div class="mt-3">
            <a href="{{ links.google }}" class="btn btn-danger" target="_blank">
                <i class="fab fa-google"></i> Google Calendar
            </a>
            
            <a href="{{ links.outlook }}" class="btn btn-primary" target="_blank">
                <i class="fab fa-microsoft"></i> Outlook
            </a>
            
            <a href="{{ links.ics }}" class="btn btn-secondary" download="reservation.ics">
                <i class="fas fa-download"></i> Télécharger (.ics)
            </a>
        </div>

        <div class="mt-4 card">
            <div class="card-body">
                <h5>Détails de la réservation :</h5>
                <p>Matériel: {{ reservation.materiel.nomMateriel }}</p>
                <p>Du: {{ reservation.dateDebut|date('d/m/Y H:i') }}</p>
                <p>Au: {{ reservation.dateFin|date('d/m/Y H:i') }}</p>
            </div>
        </div>
    </div>
{% endblock %}