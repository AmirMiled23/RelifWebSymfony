{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <!-- Header et navigation sont déjà inclus via base.html.twig -->

    <!-- Page Content - Contenu spécifique à la page user index -->
    <div class="page-heading header-text">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <h1>Liste des Utilisateurs</h1>
            <span>Gestion des utilisateurs du système</span>
          </div>
        </div>
      </div>
    </div>

    <div class="container mt-5">
        <div class="row">
            <div class="col-md-12">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered">
                        <thead class="thead-dark">
                            <tr>
                                <th>Id</th>
                                <th>Nom</th>
                                <th>Prénom</th>
                                <th>Email</th>
                                <th>Téléphone</th>
                                <th>Adresse</th>
                                <th>Age</th>
                                <th>Points</th>
                                <th>Date Inscription</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for user in users %}
                            <tr>
                                <td>{{ user.idUser }}</td>
                                <td>{{ user.nomUser }}</td>
                                <td>{{ user.prenomUser }}</td>
                                <td>{{ user.emailUser }}</td>
                                <td>{{ user.numUser }}</td>
                                <td>{{ user.adresseUser }}</td>
                                <td>{{ user.ageUser }}</td>
                                <td>{{ user.pointUser }}</td>
                                <td>{{ user.dateInscri ? user.dateInscri|date('Y-m-d') : '' }}</td>
                                <td>
                                    <a href="{{ path('app_user_show', {'id_user': user.id_user}) }}" class="btn btn-info btn-sm">Voir</a>
                                    <a href="{{ path('app_user_edit', {'id_user': user.id_user}) }}" class="btn btn-warning btn-sm">Modifier</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="12" class="text-center">Aucun utilisateur trouvé</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>

                <div class="text-right mt-3">
                    <a href="{{ path('app_user_new') }}" class="btn btn-success">
                        <i class="fa fa-plus"></i> Créer un nouvel utilisateur
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer est déjà inclus via base.html.twig -->
{% endblock %}