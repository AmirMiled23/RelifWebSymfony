{% extends 'base.html.twig' %}

{% block title %}Modifier un utilisateur{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">Modifier un utilisateur</h1>

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4><i class="fas fa-user-edit"></i> Modifier un utilisateur</h4>
        </div>
        <div class="card-body">
            {{ form_start(form) }}
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            {{ form_label(form.nom_user, 'Nom', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.nom_user, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.nom_user) }}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            {{ form_label(form.prenom_user, 'Prénom', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.prenom_user, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.prenom_user) }}
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            {{ form_label(form.email_user, 'Email', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.email_user, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.email_user) }}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            {{ form_label(form.pw_user, 'Mot de passe', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.pw_user, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.pw_user) }}
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            {{ form_label(form.num_user, 'Numéro de téléphone', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.num_user, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.num_user) }}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            {{ form_label(form.adresse_user, 'Adresse', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.adresse_user, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.adresse_user) }}
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            {{ form_label(form.age_user, 'Âge', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.age_user, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.age_user) }}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            {{ form_label(form.date_inscri, 'Date d\'inscription', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.date_inscri, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.date_inscri) }}
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save"></i> Enregistrer
                    </button>
                    <a href="{{ path('app_user_index') }}" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Retour
                    </a>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
