{% extends 'base.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">Edit User</h1>

    {{ form_start(form) }}
        {{ form_row(form.nom_user) }}
        {{ form_row(form.prenom_user) }}
        {{ form_row(form.email_user) }}
        {{ form_row(form.pw_user) }}
