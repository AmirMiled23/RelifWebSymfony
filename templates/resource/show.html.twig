{% extends 'base.html.twig' %}

{% block title %}Resource{% endblock %}

{% block body %}
<style>
    .resource-details-bg {
        background: linear-gradient(120deg, #e3f2fd 0%, #b2ebf2 100%);
        min-height: 100vh;
        padding-top: 40px;
        padding-bottom: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .resource-details-card {
        background: rgba(255,255,255,0.98);
        border-radius: 1rem;
        box-shadow: 0 0.5rem 2rem rgba(44, 62, 80, 0.15);
    }
</style>
<div class="resource-details-bg">
    <div class="container py-4">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card resource-details-card border-0">
                    <div class="card-body">
                        <h2 class="card-title mb-3 text-info">{{ resource.type }}</h2>
                        <h5 class="card-subtitle mb-3 text-muted">{{ resource.url }}</h5>
                        <ul class="list-group list-group-flush mb-3">
                            <li class="list-group-item"><strong>Description:</strong> {{ resource.description }}</li>
                        </ul>
                        <a href="{{ path('app_resource_index') }}" class="btn btn-outline-info w-100 mt-2">
                            <i class="fas fa-arrow-left"></i> Back to list
                        </a>
                        <a href="{{ path('app_resource_edit', {'id': resource.id}) }}" class="btn btn-warning w-100 mt-2">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        {{ include('resource/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
